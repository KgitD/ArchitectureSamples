<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.qmuiteam.qmui.layout.QMUIPriorityLinearLayout
        android:id="@id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_recycler_view_padding"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/default_card_view_padding">

        <androidx.core.widget.NestedScrollView
            android:id="@id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
                    android:id="@id/title"
                    style="@style/UITextAppearance.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="红楼梦" />

                <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
                    android:id="@id/subtitle"
                    style="@style/UITextAppearance.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    tools:text="清代长篇人情小说" />

                <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
                    android:id="@id/content"
                    style="@style/UITextAppearance.Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="《红楼梦》，中国古代章回体长篇小说，中国古典四大名著之一，一般认为是清代作家曹雪芹所著。小说以贾、史、王、薛四大家族的兴衰为背景，以富贵公子贾宝玉为视角，以贾宝玉与林黛玉、薛宝钗的爱情婚姻悲剧为主线，描绘了一批举止见识出于须眉之上的闺阁佳人的人生百态，展现了真正的人性美和悲剧美，可以说是一部从各个角度展现女性美以及中国古代社会世态百相的史诗性著作。" />

                <com.qmuiteam.qmui.widget.textview.QMUISpanTouchFixTextView
                    android:id="@id/summary"
                    style="@style/UITextAppearance.Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </com.qmuiteam.qmui.layout.QMUIPriorityLinearLayout>

</layout>